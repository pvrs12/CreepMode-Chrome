{
	"manifest_version":2,

	"name": "Creep Mode",
	"version": "0.0.1",
	"description":"Read-only facebook",
	"icons": {"64":"icon64.png","32":"icon.png"},
	"background":{
		"scripts":["background.js"],
		"persistent":false
	},
	"browser_action":{
		"default_title":"CreepMode"
	},
	"content_scripts":[
		{
			"matches":["http://*.facebook.com/*","https://*.facebook.com/*"],
			"js":[
				"data/creepmode.js"
			]
		}
	],
	"permissions":[
		"declarativeContent",

		"http://*.facebook.com/*",
		"https://*.facebook.com/*"
	]
}
